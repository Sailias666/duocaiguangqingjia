.bg{
  background-color: #EEEEEE;
}

.post-container{
  background-color: #EEEEEE;  
flex-direction:column;
display:flex;
margin-top:10px;
margin-bottom:10px;
border-bottom: 1px solid #ededed;
border-top: 1px solid #ededed;
padding-bottom: 5px;
}

.grid-item{
  background-color: #fff;  
  flex-direction:column;
  display:flex;
  height: 260px;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  margin-top: 5px;
}

.title-container{
  height:40px;
  width: 100%
}

.image-container{
  height:140px;
  width: 100%;
}

.content-container{
  height:55px;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
}

.deadline-container{
  height:20px;
  width: 100%;
  font-family: MicroSoft Yahei;
  
}

.deadline{
  float: right;
  margin-right: 10px;
  margin-top: 1px;
  font-size: 10px;
  color: #AAAAAA  ;
}

.post-author-date{
margin-top:10rpx;
margin-bottom: 20rpx;
margin-left: 10px;
}

.post-author{
width:40rpx;
height:40rpx;
vertical-align: middle;
}

.post-date{
margin-left: 20px;
vertical-align: middle;
}

.post-image{
width:100%;
height:100%;
}

.post-date{
font-size:26rpx;
margin-bottom: 10px;
}
.post-title{
font-size:25px;
font-weight: 600;
color:#333;
margin-top: 5px;
margin-left: 10px;
}
.post-content{
color:#666;
font-size:28rpx;
margin-bottom:20rpx;
margin-left: 20rpx;
letter-spacing:2rpx;
line-height: 40rpx;
overflow: hidden;
text-overflow:ellipsis;
}
.post-like{
font-size:13px;
line-height: 16px;
margin-left: 10px;
}

.post-like-image{
height:16px;
width:16px;
margin-right: 8px;
vertical-align:middle;
}

.post-like-font{
vertical-align:middle;
margin-right: 20px;
}